<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="lego_contact" inherit_id="website.snippets" name="Contact">
        <xpath expr="//div[@id='snippet_structure']/div[hasclass('o_panel_body')]"
               position="inside">
            <t t-snippet="theme_lego.contact"
                           t-thumbnail="/theme_lego/static/src/img/snippets/contact-block.jpg"/>
        </xpath>
    </template>
    <template id="contact" name="Contact">
        <!-- Banner -->
        <section class="banner_product">
            <div class="container">
                <div class="row">
                    <div class="col-12">
                        <div class="banner_content">
                            <div class="product_heading">
                                <h1>Contact</h1>
                                <nav aria-label="breadcrumb">
                                    <ol class="breadcrumb">
                                        <li class="breadcrumb-item">
                                            <a href="#">Home</a>
                                            <i class="material-icons"
                                               style="font-size:12px;color:#ffffff;">
                                                arrow_forward
                                            </i>
                                        </li>
                                        <li class="breadcrumb-item active"
                                            aria-current="page">Contact
                                        </li>
                                    </ol>
                                </nav>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
        <!-- Banner -->
        <!-- Contact section starts here -->
        <section class="contact">
            <div class="contact_form">
                <div class="container">
                    <div class="row">
                        <div class="col-4">
                            <div class="contact_left">
                                <div class="wrapper">
                                    <span class="fa fa-home"/>
                                    <div class="rc">
                                        <h4>California United states</h4>
                                        <p>Santa monica bullevard</p>
                                    </div>
                                </div>
                                <div class="wrapper">
                                    <span class=" 	fa fa-phone-volume"/>
                                    <div class="rc">
                                        <h4>California United states</h4>
                                        <p>Mon to Fri 9am to 6 pm</p>
                                    </div>
                                </div>
                                <div class="wrapper">
                                    <span class=" 	far fa-envelope"/>
                                    <div class="rc">
                                        <h4>support@cybrosys.com</h4>
                                        <p>Send your query at any time</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-8">
                            <div class="contact_right">
                                <div class="card">
                                    <form class="card-body">
                                        <div class="row">
                                            <div class="col-md-6 mb-5">
                                                <div class="md-form ">
                                                    <label for="firstName"
                                                           class="">Name
                                                    </label>
                                                    <input type="text"
                                                           id="firstName"
                                                           class="form-control"/>
                                                </div>
                                            </div>
                                            <div class="col-md-6 mb-2">
                                                <div class="md-form">
                                                    <label for="email"
                                                           class="">
                                                        Email
                                                    </label>
                                                    <input type="email"
                                                           id="email"
                                                           class="form-control"/>
                                                </div>
                                            </div>
                                            <div class="col-md-12 mb-2">
                                                <!--lastName-->
                                                <div class="md-form">
                                                    <label for="lastName"
                                                           class="">Subject
                                                    </label>
                                                    <input type="text"
                                                           id="lastName"
                                                           class="form-control"/>
                                                </div>
                                            </div>
                                            <div class="col-md-12 mt-2">
                                                <!--lastName-->
                                                <div class="md-form">
                                                    <label for="lastName"
                                                           class="">Message
                                                    </label>
                                                    <textarea type="text"
                                                              id="lastName"
                                                              class="form-control"
                                                              style="height: 150px;">
                                                    </textarea>
                                                </div>
                                            </div>
                                            <a href=" #" class="btn btn-send">
                                                SEND
                                            </a>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </template>
</odoo>
