<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="lego_login" inherit_id="website.snippets" name="Login">
        <xpath expr="//div[@id='snippet_structure']/div[hasclass('o_panel_body')]"
               position="inside">
            <t t-snippet="theme_lego.login"
                           t-thumbnail="/theme_lego/static/src/img/snippets/login-block.jpg"/>
        </xpath>
    </template>
    <template id="login" name="Login">
        <!-- Banner -->
        <section class="banner_product">
            <div class="container">
                <div class="row">
                    <div class="col-12">
                        <div class="banner_content">
                            <div class="product_heading">
                                <h1>Login/Register</h1>
                                <nav aria-label="breadcrumb">
                                    <ol class="breadcrumb">
                                        <li class="breadcrumb-item">
                                            <a href="#">Home</a>
                                            <i class="material-icons"
                                               style="font-size:12px;color:#ffffff;">
                                                arrow_forward
                                            </i>
                                        </li>
                                        <li class="breadcrumb-item active"
                                            aria-current="page">Login
                                        </li>
                                    </ol>
                                </nav>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
        <!-- Login section starts here -->
        <section class="login">
            <div class="container">
                <div class="row">
                    <div class="col-lg-6 col-12">
                        <div class="wrapper_img">
                            <img src="/theme_lego/static/src/img/login/login.jpg"/>
                            <div class="register">
                                <h5>New to our site</h5>
                                <p>
                                    There are advances being made in science and
                                    technology everyday, and a good example of
                                    this is the
                                </p>
                                <a href="#" class="btn btn-register">Create an
                                    account
                                </a>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-6 col-12">
                        <div class="login_form">
                            <h4>LOGIN TO ENTER</h4>
                            <form action="" class="contact-form">
                                <div class="row">
                                    <div class="col-sm-12">
                                        <div class="input-block">
                                            <label for="">User name</label>
                                            <input type="text"
                                                   class="form-control"/>
                                        </div>
                                    </div>
                                    <div class="col-sm-12">
                                        <div class="input-block">
                                            <label for="">Password</label>
                                            <input type="password"
                                                   class="form-control"/>
                                        </div>
                                    </div>
                                </div>
                            </form>
                            <div class="md-form mb-5">
                                <div class="form-check mb-3">
                                    <input class="form-check-input"
                                           type="checkbox" value=""
                                           id="defaultCheck1"/>
                                    <label class="form-check-label"
                                           for="defaultCheck1">
                                        Keep me Logged in
                                    </label>
                                </div>
                            </div>
                            <a href="#" class="btn btn-login">LOGIN</a>
                            <a href="#" class="forgot">Forgot password ?</a>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </template>
</odoo>
