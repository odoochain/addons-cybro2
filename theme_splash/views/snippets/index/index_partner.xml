<odoo>
    <template id="index_partner_snippet" inherit_id="website.snippets"
              name="index_partner">
        <xpath expr="//div[@id='snippet_feature']/div[hasclass('o_panel_body')]"
               position="inside">
            <t t-snippet="theme_splash.index_partner"
               t-thumbnail="/theme_splash/static/src/images/snippets/suppliers-block.png"
            />
        </xpath>
    </template>
    <template id="index_partner" name="Index Partner snippet">
        <section class="partner">

            <div class="container">
                <h3>
                    Supplies &amp; Partners
                </h3>
            </div>

            <div class="container">
                <div class="wrapper">
                    <div class="row">
                        <div class="col-lg-2 col-md-4 col-sm-4 col-6">
                            <img src="/theme_splash/static/src/images/partner/logo1.jpg"/>
                        </div>
                        <div class="col-lg-2 col-md-4 col-sm-4 col-6">
                            <img src="/theme_splash/static/src/images/partner/logo2.jpg"/>
                        </div>
                        <div class="col-lg-2 col-md-4 col-sm-4 col-6">
                            <img src="/theme_splash/static/src/images/partner/logo3.jpg"/>
                        </div>
                        <div class="col-lg-2 col-md-4 col-sm-4 col-6">
                            <img src="/theme_splash/static/src/images/partner/logo4.jpg"/>
                        </div>
                        <div class="col-lg-2 col-md-4 col-sm-4 col-6">
                            <img src="/theme_splash/static/src/images/partner/logo2.jpg"/>
                        </div>
                        <div class="col-lg-2 col-md-4 col-sm-4 col-6">
                            <img src="/theme_splash/static/src/images/partner/logo1.jpg"/>
                        </div>
                    </div>
                </div>

            </div>

        </section>
    </template>
</odoo>